          .box
            +basket-list
        .col-12
          .basket__bottom.mb-3
            .row
              .col-12.col-md-4
                .basket__coupon.mb-4
                  form(action="")
                    input(placeholder='Ввести подарочный сертификат').input
              .block.col-12.order-md-5
                +alert('До бесплатной доставки по Росcии осталось 5 240 ₽')
