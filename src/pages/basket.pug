                  //-       span.basket__total-amount 3 400 ₽
                  //- .row
                  //-   .col-6.ml-auto.col-md-6
                  //-     p.basket__total-text Скидка:
                  //-   .col-6.col-md-6
                  //-     p.basket__total-amount
                  //-       span.basket__total-amount 1 200 ₽
                  .row
                    .col-6.ml-auto.col-md-6
                      p.basket__total-text Итого:
                    .col-6.col-md-6
                      p.basket__total-amount
